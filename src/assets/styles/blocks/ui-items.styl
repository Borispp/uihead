.ui-items
  font-size 0
  text-align center
  overflow-x hidden
  width 100%
  padding-bottom 36px
  margin-bottom -24px
  position relative
  z-index 3

  .ui-list
    text-align center
    position relative
    left 50%
    transform translate(-50%, 0)

  .ui-list-content
    display none

    &.-hide
      opacity 0
      position absolute

  .ui-content
    .ui-content-link
      display block
      position absolute
      z-index 999
      width 100%
      height 100%
      top 0
      left 0

    .link
      position relative
      z-index 2

  .ui-item
    width 330px
    height 320px
    display inline-block
    position relative
    vertical-align middle
    font-size 14px
    text-align center
    padding 10px 10px 18px
    box-sizing border-box
    margin 0 -5px
    transition background-color .15s linear, box-shadow .15s linear

    .ui-content
      display none
      position absolute
      width calc(100% - 20px)

    img
      width 100%

    a
      font-size 14px

    h2.headline
      font-size 20px
      letter-spacing -1px
      line-height 24px
      padding 18px 0 0

      a
        position relative
        z-index 1
        font-size 20px
        color $black
        text-decoration none
        &:hover
          text-decoration underline

    .best-offer
      padding-top 0

    h2.headline,
    .best-offer,
    .author-name
      opacity 0
      transition opacity .15s linear


    &:hover
      box-shadow 0 10px 40px $black-shadow-hover
      background $white
      z-index 1

      h2.headline,
      .best-offer,
      .author-name
        opacity 1

@media (max-width 2530px)

  .ui-list li.ui-item.-active:nth-child(1):hover,
  .ui-list li.ui-item.-active:nth-last-child(1):hover
    box-shadow none
    background none
    z-index 1

    h2.headline,
    .best-offer,
    .author-name
      opacity 0

@media (max-width 1900px)

  .ui-list li.ui-item.-active:nth-child(2):hover,
  .ui-list li.ui-item.-active:nth-last-child(2):hover
    box-shadow none
    background none
    z-index 1

    h2.headline,
    .best-offer,
    .author-name
      opacity 0

@media (max-width 1200px)

  .ui-list li.ui-item.-active:nth-child(3):hover,
  .ui-list li.ui-item.-active:nth-last-child(3):hover
    box-shadow none
    background none
    z-index 1

    h2.headline,
    .best-offer,
    .author-name
      opacity 0

@media (max-width 700px)
  .ui-items
    display none
