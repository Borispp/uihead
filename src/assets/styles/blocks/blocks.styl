// ==============================================
// Content
// ==============================================

.content

  &.-right
    float right
    width 49%
    max-width 540px

  &.-right-middle
    float right
    width 45%
    max-width 500px

  &.-right-small
    float right
    width 41%
    max-width 444px

  &.-centered
    text-align center

  &.-light
    .headline,
    .headline-description,
    .headline-author,
    .price
      color $black

    .price s:before
      background $black

    .headline-author
      a
        color $black

  &.-dark
    .headline,
    .headline-description,
    .headline-author,
    .price
      color $white

    .price s:before
      background $white

    .headline-author
      color $white

      a
        color $white
        border-color $white

.sub-headline
  margin-bottom 16px

  &.-top
    margin -40px 0 46px

.content-image
  float left
  width 47%
  max-width 540px
  position relative
  font-size 0

  img
    width 100%
    border 2px solid $white
    border-radius 5px
    box-shadow 3px 3px 8px $black-shadow

  .overlay-link
    opacity 0
    transition opacity 0.2s
    margin 2px
    border-radius 3px
    height calc(100% - 4px)

  &:hover
    .overlay-link
      opacity 1

// ==============================================
// Substrate
// ==============================================

.substrate
  overflow hidden
  position relative

  &:before
    content ''
    position absolute
    z-index 1
    top 0
    left 0
    display block
    width 100%
    height 100%
    background rgba(10,10,10,.88)


  .substrate-images
    position absolute
    background #777
    left 50%
    top 50%
    transform translate(-50%, -50%)
    width 100%
    height calc(100% + 20px)
    margin -5px 0
    min-width 1440px
    max-width 2800px

    li
      width calc(20% - 10px)
      height calc(100% / 3 - 10px)
      display block
      float left
      background-size cover
      margin 5px

// ==============================================
// Purchase
// ==============================================

.purchase
  padding-top 12px

  .purchase-currency,
  .purchase-price,
  .purchase-old-price
    display inline-block
    vertical-align middle

  .purchase-currency
    font-size 15px
    font-weight 600
    margin-top -26px

  .purchase-price
    font 600 50px 'Poppins'
    margin 0 8px 0 6px

  .purchase-old-price
    font 600 27px 'Poppins'
    margin -18px 30px 0 0
    letter-spacing -2px
    position relative

    &:before
      content ''
      width calc(100% + 4px)
      height 3px
      position absolute
      left -2px
      top calc(50% - 3px)
      background $white


.block-shadow
  background #fff
  box-shadow 0 4px 10px $black-shadow
  box-sizing border-box
  border-radius 4px

.growl
  opacity .9

@media (max-width 1160px)
  .content-image
    width 45%
    margin-left 16px

  .content.-right-middle
    margin-right 16px

@media (max-width 920px)
  .section.-default .content-image + .content
    padding-top 20px

@media (max-width 700px)
  .base-col
    width 100%
    padding 0 16px

  .section

    .content
      float none !important
      width 100% !important
      margin-top 0 !important

      &.-mobile-centered
        text-align center

    &.-default
      padding 60px 0

  .sub-headline.-top
    font-size 14px
    margin -20px 0 32px

  .content-image
    float none
    width calc(100% - 4px)
    max-width 100%
    margin 0 6px 15px 0

  .purchase
    padding-top 0

    .purchase-currency
      margin-left 30px


  .block-shadow
    border-radius 0
