// ==============================================
// Content
// ==============================================

.content

  &.-right
    float right
    width 49%
    max-width 540px

  &.-right-middle
    float right
    width 45%
    max-width 500px

  &.-right-small
    float right
    width 41%
    max-width 444px

  &.-centered
    text-align center

.sub-headline
  margin-bottom 16px

  &.-top
    margin -40px 0 46px

// ==============================================
// Substrate
// ==============================================

.substrate
  overflow hidden
  position relative

  &:before
    content ''
    position absolute
    z-index 1
    top 0
    left 0
    display block
    width 100%
    height 100%
    background rgba(10,10,10,.88)


  .substrate-images
    position absolute
    background #777
    left 50%
    top 50%
    transform translate(-50%, -50%)
    width 100%
    height calc(100% + 20px)
    margin -5px 0
    min-width 1440px
    max-width 2800px

    li
      width calc(20% - 10px)
      height calc(100% / 3 - 10px)
      display block
      float left
      background-size cover
      margin 5px

.block-shadow
  background #fff
  box-shadow 0 4px 10px $black-shadow
  box-sizing border-box
  border-radius 4px

.growl
  opacity .9

.promo-block
  width 100%
  font-size 0

  .promo-content
    width calc(57% - 80px)
    display inline-block
    vertical-align middle
    padding-left 10px
    padding-right 70px
    text-align center
    margin-bottom -24px

  .promo-image
    width 43%
    display inline-block
    vertical-align middle

    img
      width 100%

.counters
  font-size 0
  margin 164px 0 138px

  .counter-item
    font-size 18px
    display inline-block
    vertical-align middle
    width calc(100% / 3)
    text-align center

  .counter-number
    font 600 96px/100px 'Poppins'
    letter-spacing -5px
    position relative

    &.-plus
      &:after
        content '+'
        font-size 35px
        line-height 35px
        position absolute
        top 4px
        margin-left 2px

    &.-percents
      &:after
        content '%'
        font-size 24px
        line-height 24px
        position absolute
        top 8px
        margin-left 2px

  .counter-headline
    font 600 36px/48px 'Poppins'
    letter-spacing -2px
    padding-top 6px

  .counter-description
    color $gray-text
    font-size 18px
    line-height 28px
    display inline-block
    width 170px

.buy-subscription
  font-size 0
  margin 0 -20px

  .buy-subscription-item
    padding 60px 20px
    box-sizing border-box
    font-size 14px
    display inline-block
    width calc(50% - 40px)
    margin 0 20px
    border-radius 4px
    color $white
    text-align center

    h2.headline
      padding 7px 0 12px

    .subscription-image
      height 180px

      img
        width 100%
        max-width 130px

    .subscription-price
      .currency,
      .price,
      .old-price
        display inline-block
        vertical-align top

      .currency
        margin-left -20px
        margin-right 2px
        font-size 24px
        line-height 40px

      .price
        font-size 96px
        letter-spacing -5px
        line-height 100px
        font-weight 600
        font-family 'Poppins'

      .old-price
        font-size 46px
        line-height 58px
        position absolute
        font-weight bold
        font-family 'Poppins'
        letter-spacing -2px
        margin 0 0 0 16px
        opacity .8

        &:before
          content ''
          display block
          position absolute
          top calc(50% - 5px)
          width calc(100% + 2px)
          height 5px
          background $white

    .subscription-description
      font-size 16px
      line-height 28px
      font-weight 500
      padding-bottom 24px

    &.-green
      background $green

      .btn.-white
        color $green

    &.-black
      background $black

      .btn.-white
        color $black

.reviews
  padding 94px 0 120px

  h2.headline
    text-align center
    margin-bottom 40px

@media (max-width 1160px)
  .content-image
    width 45%
    margin-left 16px

  .content.-right-middle
    margin-right 16px

@media (max-width 1000px)
  .promo-block

    .promo-content
      width calc(53% - 64px)
      padding-left 24px
      padding-right 40px
      text-align left
      margin-bottom 0

      h2.headline
        font-size 28px
        line-height 36px
        letter-spacing -1.5px

      .headline-description
        font-size 16px
        line-height 26px
        letter-spacing -.25px

    .promo-image
      width 46%
      margin-top -22px


  .counters
    font-size 0
    margin 106px 0 116px

    .counter-number
      font 600 70px/56px 'Poppins'
      letter-spacing -4px
      position relative

      &.-plus
        &:after
          font-size 30px
          top -9px

      &.-percents
        &:after
          font-size 28px
          top -5px
          margin-left 3px

    .counter-headline
      font 600 30px/48px 'Poppins'
      letter-spacing -2px
      padding-top 6px

    .counter-description
      color $gray-text
      font-size 16px
      line-height 24px
      display inline-block
      width 185px


  .buy-subscription

    .buy-subscription-item
      padding 60px 20px 50px
      font-size 14px
      width calc(50% - 32px)
      margin 0 16px

      h2.headline
        padding 7px 0 15px
        font-size 28px
        letter-spacing -1.75px

      .subscription-image
        height 160px

      .subscription-price

        .currency
          font-size 24px
          line-height 34px

        .price
          font-size 70px
          letter-spacing -4px
          line-height 70px

        .old-price
          font-size 30px
          line-height 34px
          letter-spacing -2px
          margin 0 0 0 12px

      .subscription-description
        font-size 14px
        line-height 24px
        font-weight 500
        padding-bottom 28px

  .reviews
    padding 60px 0 82px

    h2.headline
      font-size 28px
      line-height 36px
      letter-spacing -1.75px
      text-align center
      margin-bottom 44px


@media (max-width 920px)
  .section.-default .content-image + .content
    padding-top 20px

@media (max-width 700px)
  .base-col
    width 100%
    padding 0 16px

  .section

    // .content
    //   float none !important
    //   width 100% !important
    //   margin-top 0 !important
    //
    //   &.-mobile-centered
    //     text-align center

    &.-default
      padding 60px 0

  .sub-headline.-top
    font-size 14px
    margin -20px 0 32px

  .content-image
    float none
    width calc(100% - 4px)
    max-width 100%
    margin 0 6px 15px 0

  .block-shadow
    border-radius 0


  .promo-block
    .promo-content
      width 100%
      padding 36px 0 0
      text-align center

      h2.headline
        font-size 22px
        line-height 30px
        letter-spacing -1.25px
        padding-bottom 13px

    .promo-image
      width 100%
      text-align center

      img
        max-width 500px

      &.desktop
        display none

  .counters
    font-size 0
    margin 35px 0 9px

    .counter-item
      font-size 18px
      padding-bottom 46px
      width 100%

  .buy-subscription
    margin 0 -15px

    .buy-subscription-item
      width 100%
      margin 0
      border-radius 0

      h2.headline
        padding 9px 0 17px

  .reviews
    padding 36px 0 60px

    h2.headline
      font-size 22px
      line-height 30px
      letter-spacing -1.25px
      margin-bottom 20px

    .reviews-items

      .review-item
        padding 24px 18px 18px

      .review-content
        font-size 16px
        line-height 26px
        min-height 0

      .reviewer
        margin 22px -18px 0

      .reviewer-avatar
        display none
