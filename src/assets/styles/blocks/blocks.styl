// ==============================================
// Composition
// ==============================================

.composition
  width 500px
  float left
  position relative

  img
    position absolute
    transition transform 0.3s

  .composition-1
    top 0
    left 30px
    transform translate(0,-50px)

  .composition-2
    top 137px
    left 92px
    transform translate(50px,50px)

  .composition-3
    top 182px
    left 0
    transform translate(-50px,50px)

  &.-active
    img
      transform translate(0,0)

// ==============================================
// Composition
// ==============================================

.content

  &.-right
    float right
    width 540px

  &.-right-small
    float right
    width 444px

  &.-light
    .headline,
    .headline-description,
    .headline-author,
    .price
      color $black

    .price s:before
      background $black

    .headline-author
      a
        color $black

  &.-dark
    .headline,
    .headline-description,
    .headline-author,
    .price
      color $white

    .price s:before
      background $white

    .headline-author
      color $white

      a
        color $white
        border-color $white

// ==============================================
// Features
// ==============================================
.features
  padding 52px 0 0
  color #fff

  .content
    padding-top 33px

    .btn
      color inherit

  .headline-author
    margin -24px 0 20px

  .price
    font-size 20px
    font-weight 600
    margin-bottom -2px

    s
      font-size 16px
      display inline-block
      vertical-align top
      position relative
      top 3px
      left 3px
      text-decoration none

      &:before
        content ''
        display inline-block
        width calc(100% + 4px)
        height 2px
        background $black
        position absolute
        top calc(50% - 2px)
        left -2px

  .headline-description
    margin-bottom 12px



.features-image
  float left


// ==============================================
// Substrate
// ==============================================

.substrate
  overflow hidden
  position relative

  &:before
    content ''
    position absolute
    z-index 1
    top 0
    left 0
    display block
    width 100%
    height 100%
    background rgba(10,10,10,.88)


  .substrate-images
    position absolute
    background #777
    left 50%
    top 50%
    transform translate(-50%, -50%)
    width 100%
    height calc(100% + 20px)
    margin -5px 0
    min-width 1440px
    max-width 2800px

    li
      width calc(20% - 10px)
      height calc(100% / 3 - 10px)
      display block
      float left
      background-size cover
      margin 5px

// ==============================================
// Subscription
// ==============================================

.section-subscription
  position relative
  z-index 2
  color #fff
  text-align center
  padding 54px 0 100px

  .headline-big
    display block
    margin 14px 0 14px

  .subscription-form
    margin-top 38px

  .subscription-name
    line-height 40px
    margin-bottom 64px

  .subscription-buyer,
  .subscription-price,
  .subscription-submit
    display inline-block

  .subscription-buyer
    width 174px
    text-align left

  .subscription-price
    margin 0 26px
    font-weight 600
    position relative
    top 2px

    .old-price,
    .price,
    .duration
      vertical-align middle

  .old-price
    font-family 'Poppins'
    font-size 24px
    color $gray-text2
    position relative
    letter-spacing -1px

    &:after
      content ''
      display block
      width calc(100% + 4px)
      height 3px
      background $gray-text2
      position absolute
      top calc(50% - 2px)
      left -2px

  .price
    font-family 'Poppins'
    font-size 36px
    display inline-block
    margin 0 8px 0 12px
    letter-spacing -2px

  .duration
    font-family 'Poppins'
    font-size 24px
    position relative
    top -4px
    letter-spacing -1px

.subscription-name
  display inline-block
  font-size 20px
  font-weight 500
  letter-spacing 6px
  text-transform uppercase
  border-bottom 2px solid $white

// ==============================================
// About List
// ==============================================

.about-list
  margin 108px 0
  font-size 0

  li
    display inline-block
    vertical-align top
    width calc(100% / 3 - 48px)
    margin 0 24px
    color $gray-text
    font-size 16px
    line-height 28px
    text-align center

  .pic
    display inline-block
    height 82px

    &:before
      content ''
      display inline-block
      margin-bottom 12px

  h2
    font-size 24px
    font-family 'Poppins'
    letter-spacing -1px
    color $black
    margin-bottom 12px

  .best .pic:before
    sprite($s-best)
  .mark .pic:before
    sprite($s-mark)
  .diamond .pic:before
    sprite($s-diamond)
