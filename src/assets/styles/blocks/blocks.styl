// ==============================================
// Content
// ==============================================

.content

  &.-right
    float right
    width 49%
    max-width 540px

  &.-right-middle
    float right
    width 45%
    max-width 500px

  &.-right-small
    float right
    width 41%
    max-width 444px

  &.-centered
    text-align center

.sub-headline
  margin-bottom 16px

  &.-top
    margin -40px 0 46px

// ==============================================
// Substrate
// ==============================================

.substrate
  overflow hidden
  position relative

  &:before
    content ''
    position absolute
    z-index 1
    top 0
    left 0
    display block
    width 100%
    height 100%
    background rgba(10,10,10,.88)


  .substrate-images
    position absolute
    background #777
    left 50%
    top 50%
    transform translate(-50%, -50%)
    width 100%
    height calc(100% + 20px)
    margin -5px 0
    min-width 1440px
    max-width 2800px

    li
      width calc(20% - 10px)
      height calc(100% / 3 - 10px)
      display block
      float left
      background-size cover
      margin 5px

.block-shadow
  background #fff
  box-shadow 0 4px 10px $black-shadow
  box-sizing border-box
  border-radius 4px

.growl
  opacity .9

@media (max-width 1160px)
  .content-image
    width 45%
    margin-left 16px

  .content.-right-middle
    margin-right 16px

@media (max-width 920px)
  .section.-default .content-image + .content
    padding-top 20px

@media (max-width 700px)
  .base-col
    width 100%
    padding 0 16px

  .section

    // .content
    //   float none !important
    //   width 100% !important
    //   margin-top 0 !important
    //
    //   &.-mobile-centered
    //     text-align center

    &.-default
      padding 60px 0

  .sub-headline.-top
    font-size 14px
    margin -20px 0 32px

  .content-image
    float none
    width calc(100% - 4px)
    max-width 100%
    margin 0 6px 15px 0

  .block-shadow
    border-radius 0
