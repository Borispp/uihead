.author
  text-align center
  padding 80px 0 72px
  position relative

  .headline
    font-size 60px
    font-family 'Poppins'
    font-weight 600
    letter-spacing -2.75px

  .headline-description
    padding-top 12px
    padding-bottom 0

  .author-avatar
    display inline-block
    vertical-align middle
    position relative
    top -3px
    width 54px
    height 54px
    border-radius 50%
    overflow hidden
    margin-right 4px

    img
      width 100%
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)

.related-blog
  padding 64px 0 100px

  h2
    text-align center
    font-size 36px
    font-family 'Poppins'
    font-weight 600
    letter-spacing -2px
    margin-bottom 58px

@media (max-width 700px)
  .author
    .author-avatar
      display block
      margin 0 auto
