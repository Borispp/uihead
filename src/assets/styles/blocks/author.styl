.page.author
  position relative

  .page-header
    margin-bottom 70px

    .page-description
      padding-top 22px

  .author-avatar
    display inline-block
    vertical-align middle
    position relative
    top -4px
    width 54px
    height 54px
    border-radius 50%
    overflow hidden
    margin-right 4px

    img
      width 100%
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)

.related-blog
  padding 64px 0 0

  h2.title
    text-align center
    font-size 36px
    font-family 'Poppins'
    font-weight 600
    letter-spacing -2.1px
    margin-bottom 58px

    .link-underline
      line-height 49px

@media (max-width 1000px)
  .page.author
    padding-top 56px

    .page-header
      margin-bottom 52px

      .page-description
        padding-top 16px

  .related-blog
      padding-top 54px

      h2.title
        font-size 28px
        line-height 36px
        letter-spacing -1.75px
        margin-bottom 51px

@media (max-width 700px)
  .page.author
    padding-top 30px
    padding-bottom 60px

    .page-header
      margin-bottom 45px

      .page-description
        padding-top 15px

    .author-avatar
      display block
      margin 0 auto 24px

  .related-blog
    padding-top 26px

    h2.title
      margin-bottom 24px
      font-size 22px
      line-height 30px
      letter-spacing -1.2px
