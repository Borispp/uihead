.header-main
  padding 26px 30px
  box-sizing border-box
  position fixed
  z-index 3
  width 100%
  top 0
  transition background .15s linear, box-shadow .15s linear, padding .15s linear
  clearfix()

  .icon
    cursor pointer

  &.-transparent
    background transparent

    .icon.-rounded.-white
      border-color $white

  &.-light,
  &.-stickit
    background $white
    box-shadow 4px 4px 15px rgba(0,0,0,.1)

    .header-main-menu a
      color $black-weak

      &:hover
        color $green-darker
      &:active
        color $green-dark

    .site-logo .logo-img
      sprite($s-logo-dark)

    .icon.-white-opacity
      background $gray
      .svg-icon, g
        fill $gray-text

      &:hover
        background $green-darker
        .svg-icon, g
          fill $white

      &:active
        background $green-dark
        .svg-icon, g
          fill $white

    .icon.-rounded.-white
      border-color $border-gray

    .btn.-default
      border-color $border-gray
      color $gray-text

      &:hover
        border-color $green-darker
        color $white
      &:active
        border-color $green-dark
        color $white

  &.-stickit
    padding 16px 30px

  .icon.-rounded.-white
    &:hover
      border-color $green-darker
    &:active
      border-color $green-dark

  .site-logo
    position relative
    top 2px

.site-logo
  float left
  text-decoration none
  font-size 0
  line-height 0

  .logo-img
    display inline-block
    sprite($s-logo)

  .emoji
    position relative
    top -1px
    margin-right 11px

  .logo-img,
  .emoji
    vertical-align top

  &.-light .logo-img
    sprite($s-logo-dark)

.header-main-menu
  position absolute
  min-width 445px
  left calc(50% + 24px)
  transform translate(-50%, 0)

  &.-light
    a
      color $black-weak

      &:before
        color $gray-text

  li
    display inline-block
    margin 0 24px

  a
    color $white
    font-size 18px
    text-decoration none
    position relative
    transition color .15s

    .svg-icon
      position absolute
      top 50%
      transform translate(-100%,-50%)
      padding-right 8px

    .svg-icon, g
      fill $gray-text
      display inline-block
      vertical-align top
      transition fill .15s

    &:hover
      color $green-darker
      .svg-icon, g
        fill $green-darker

    &:active
      color $green-dark
      .svg-icon, g
        fill $green-dark

  .catalog .svg-icon
    padding-right 6px


.header-main-controls
  float right
  margin-top -2px
  clearfix()

  a
    vertical-align top

  .icon,
  .btn
    float left
    margin-left 10px

.mobile-menu
  position fixed
  z-index 4
  top 0
  left 0
  width 100vw
  height calc(100vh + 1px)
  background rgba(0,0,0,.92)
  transform translate(0, 0)
  transition transform 0.25s cubic-bezier(0.37, 0.31, 0.2, 0.85)

  &.-hide
    display block
    transform translate(100%, 0)

    // .mobile-menu-links
    //   a
    //     transform translate(0,60px)


  .close-button
    position absolute
    top 28px
    right 30px

  .mobile-menu-links
    display inline-block
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    text-align center

    li
      overflow hidden

    a
      display inline-block
      font-size 35px
      line-height 60px
      font-weight 600
      color $white
      text-decoration none
      // transform translate(0,0)
      // transition transform .25s

      &:hover
        color $green-darker

      &:active
        color rgba(255,255,255,.8)

@media (max-width 850px)
  .header-main-menu
    min-width 380px

    li
      display inline-block
      margin 0 6px

    a
      font-size 16px

      &:before
        font-size 16px

    .subscription a:before
      font-size 14px

    .deal a:before
      font-size 20px

@media (max-width 700px)
  .header-main
    padding 16px 15px

    &.-stickit
      padding 16px 15px

    .site-logo
      margin-top 2px

      .emoji
        display none
