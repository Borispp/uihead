// ==============================================
// Emoji
// ==============================================

.emoji
  display inline-block

  &.emoji-kiss
    sprite($s-emoji-kiss)

  &.emoji-kiss2
    sprite($s-emoji-kiss2)

  &.emoji-wink
    sprite($s-emoji-wink)

  &.emoji-laugh
    sprite($s-emoji-laugh)

  &.emoji-laugh2
    sprite($s-emoji-laugh2)

  &.emoji-laugh3
    sprite($s-emoji-laugh3)

// ==============================================
// Buttons
// ==============================================

.btn
  cursor pointer
  display inline-block
  position relative
  top 0
  font-family 'Roboto'
  font-size 14px
  font-weight 500
  line-height 16px
  border-radius 20px
  padding 10px 20px
  text-decoration none
  background none
  border none
  transition background .15s linear, color .15s linear, border-color .15s linear

  &:active
    top 1px

  &.-large
    font-size 18px
    padding 21px 32px
    border-radius 36px

  &.-big
    font-size 18px
    padding 21px 43px
    border-radius 36px


  &.-default
    background $white
    border 1px solid $border-gray
    color $gray-text
    transition background .1s linear, color .1s linear, border-color .1s linear

    &:hover
      color #fff
      background $green-darker
      border-color $green-darker

    &:active
      color #fff
      background $green-dark
      border-color $green-dark

  &.-green
    background $green
    border 1px solid transparent
    color $white

    &:hover
      background $green-darker

    &:active
      background $green-dark

  &.-blue
    background $blue
    border 1px solid transparent
    color $white

    &:hover
      background $blue-darker


  &.-black
    background $black
    border 1px solid $black
    color $white

    &:hover
      background $black-opacity
      border-color $black-opacity

  &.-dark
    background rgba(0,0,0,.89)
    border 1px solid transparent
    color $white

    &:hover
      background rgba(0,0,0,.75)

    &:active
      background rgba(0,0,0,.91)

  &.-white
    background $white
    border 1px solid transparent
    color $green

    &:hover
      background $white-opacity

  &.-text-blue
    color $blue

  &.-white-shadow
    font-size 16px
    background $white
    border 2px solid $white
    padding 11px 22px 10px
    color $black
    box-shadow 2px 3px 3px rgba(0,0,0,.1)
    transition color .15s linear, box-shadow .15s linear

    &:hover
      color $blue

    &:active
      color $blue
      border 2px solid $blue
      box-shadow 0 3px 3px rgba(0,0,0,0)

  &.-white-opacity
    background rgba(255,255,255,.2)
    border-color transparent
    color $white

    &:hover
      background $green-darker
      border-color transparent

    &:active
      background $green-dark

  &.-rounded
    box-sizing border-box
    padding 0
    width 74px
    height 74px
    border-radius 50%
    text-align center
    text-transform uppercase
    overflow hidden

    &.-default
      font-size 22px
      line-height 74px

  &.-arrow
    font-size 12px

    .svg-icon
      position relative
      left 1px
      display block
      margin 10px auto 0px
      fill $white
      transform translate(0,0)
      transition transform .15s

    &:hover
      .svg-icon
        transform translate(0,-4px)

  &.-uppercase
    text-transform uppercase

  .centered
    font-style normal
    display inline-block
    vertical-align middle
    padding-top 2px

    &:after
      content ''
      display inline-block
      vertical-align middle
      position relative
      height 100%

// ==============================================
// Links style
// ==============================================
a
  transition color .15s linear

.link-underline
  position relative
  display inline-block
  padding-right 2px
  vertical-align middle
  overflow hidden
  text-decoration none
  color $green
  transition color .15s

  &:after
    content ""
    position absolute
    bottom 2px
    left 0
    width 100%
    height 5px
    background $green-darker
    transform translate(-101%, 0)
    transition transform 0.25s

  &:hover
    color $green-darker
    &:after
      transform translate(0, 0)

  &:active
    color $green-dark
    &:after
      background $green-dark
      transform translate(0, 0)

.link
  display inline-block
  position relative
  vertical-align top
  font-size 16px
  font-weight 500
  text-decoration none
  transition color 0.15s

  &:active
    top 1px

  &.-blue
    color $blue
    .svg-icon
      fill $blue

    &:hover
      color $blue-darker
      .svg-icon
        fill $blue-darker

    &:active
      color $blue-dark
      .svg-icon
        fill $blue-dark

  &.-green
    color $green
    .svg-icon
      fill $green

    &:hover
      color $green-darker
      .svg-icon
        fill $green-darker

    &:active
      color $green-dark
      .svg-icon
        fill $green-dark

  &.link-arrow

    .svg-icon
      display inline-block
      margin-left 6px
      transform translate(0,0)

    &:hover .svg-icon
      animation: link-arrow-animation linear .4s 2;

.overlay-link
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background rgba(0,0,0,.35)

  .btn
    position absolute
    top 50%
    left 50%
    background $white
    color $green
    opacity 0.9
    transform translate(-50%, -50%) scale(.85)
    transition transform .15s linear, opacity .15s linear

    &:hover
      opacity 1

    &:active
      opacity 1
      top calc(50% + 1px)

  &:hover .btn
    transform translate(-50%, -50%) scale(1)


// ==============================================
// Form elements
// ==============================================
.checkbox

  input
    display none

    &:checked
      + label
        &:before
          background $green
          border-color $green

        &:after
          content ''
          display inline-block
          sprite($s-checked)
          position absolute
          z-index 1
          top 2px
          left 4px

        .label-text
          color $green


  label
    cursor pointer
    position relative

    &:before
      content ''
      display inline-block
      background #f8f8f8
      border 1px solid $border-gray
      width 14px
      height 14px
      border-radius 2px
      transition border-color 0.1s linear, background 0.1s linear, color 0.1s linear

    &:hover
      &:before
        border-color $green

      .label-text
        color $green

    .label-text
      color $gray-text
      position relative
      top -2px
      padding-left 6px

// ==============================================
// Keyframes
// ==============================================

@keyframes link-arrow-animation
    0%
      transform translate(0, 0)
    50%
      transform translate(3px, 0)
    100%
      transform translate(0, 0)


@media (max-width 700px)
  .link
    &.link-arrow:after,
    &.link-arrow .svg-icon
      display none
