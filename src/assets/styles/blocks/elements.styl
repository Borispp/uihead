// ==============================================
// Emoji
// ==============================================

.emoji
  display inline-block

  &.emoji-kiss
    sprite($s-emoji-kiss)

  &.emoji-kiss2
    sprite($s-emoji-kiss2)

  &.emoji-wink
    sprite($s-emoji-wink)

  &.emoji-laugh
    sprite($s-emoji-laugh)

  &.emoji-laugh2
    sprite($s-emoji-laugh2)

  &.emoji-laugh3
    sprite($s-emoji-laugh3)

// ==============================================
// Buttons
// ==============================================

.btn
  cursor pointer
  display inline-block
  position relative
  top 0
  font-family 'Roboto'
  font-size 14px
  font-weight 500
  line-height 16px
  border-radius 20px
  padding 10px 20px
  text-decoration none
  background none
  border none
  transition background .15s linear, color .15s linear, border-color .15s linear

  &:active
    top 1px

  &.-large
    font-size 18px
    padding 21px 30px
    border-radius 36px


  &.-default
    background $white
    border 1px solid $border-gray
    color $gray-text

    &:hover
      color #fff
      background $green-darker
      border-color $green-darker

    &:active
      color #fff
      background $green-dark
      border-color $green-dark

  &.-green
    background $green
    border 1px solid $green
    color $white

    &:hover
      background $green-darker
      border-color $green-darker

    &:active
      background $green-dark
      border-color $green-dark

  &.-black
    background $black
    border 1px solid $black
    color $white

    &:hover
      background $black-opacity
      border-color $black-opacity

  &.-dark
    background rgba(0,0,0,.89)
    border 1px solid transparent
    color $white

    &:hover
      background rgba(0,0,0,.81)

    &:active
      background rgba(0,0,0,.91)

  &.-white
    background $white
    border 1px solid transparent
    color $green

    &:hover
      background $white-opacity

  &.-white-shadow
    background $white
    border 2px solid $white
    padding 9px 19px
    color $black
    box-shadow 0 3px 3px rgba(0,0,0,.1)
    transition color .15s linear, box-shadow .15s linear

    &:hover
      color $blue

    &:active
      color $blue
      border 2px solid $blue
      box-shadow 0 3px 3px rgba(0,0,0,0)

  &.-white-opacity
    background rgba(255,255,255,.2)
    border-color transparent
    color $white

    &:hover
      background $green-darker
      border-color transparent

    &:active
      background $green-dark

  &.-rounded
    box-sizing border-box
    padding 0
    width 78px
    height 78px
    border-radius 50%
    text-align center
    text-transform uppercase
    overflow hidden

    &.-default
      font-size 22px
      line-height 78px

  &.-arrow
    &:before
      content ''
      position relative
      left 1px
      sprite($s-arrow-top)
      display block
      margin 15px auto 6px
      font-size 20px
      transform translate(0,0)
      transition transform 0.2s

    &:hover
      &:before
        transform translate(0,-3px)

  &.-uppercase
    text-transform uppercase

// ==============================================
// Links style
// ==============================================

.link-underline
  position relative
  display inline-block
  vertical-align middle
  overflow hidden
  text-decoration none
  color $green

  &:after
    content ""
    position absolute
    bottom 6px
    left 0
    width 100%
    height 5px
    background $green
    transform translate(-101%, 0)
    transition transform 0.25s

  &:hover:after
    transform translate(0, 0)

.link
  display inline-block
  vertical-align top
  font-size 16px
  font-weight 500
  text-decoration none
  transition color 0.15s

  &.-blue
    color $blue

    &:hover
      color $blue-darker

  &.-green
    color $green

    &:hover
      color $green-darker

  &.link-arrow
    &:after
      font-family 'iconfont'
      content "\EA04"
      font-size 20px
      display inline-block
      padding-left 12px
      padding-right 2px
      transform translate(0,0)

    &:hover:after
        animation: link-arrow-animation linear .4s 2;

// ==============================================
// Form elements
// ==============================================
.checkbox

  input
    display none

    &:checked
      + label
        &:before
          background $green
          border-color $green

        &:after
          content ''
          display inline-block
          sprite($s-checked)
          position absolute
          z-index 1
          top 2px
          left 4px

        .label-text
          color $green


  label
    cursor pointer
    position relative

    &:before
      content ''
      display inline-block
      background #f8f8f8
      border 1px solid $border-gray
      width 14px
      height 14px
      border-radius 2px
      transition border-color 0.1s linear, background 0.1s linear, color 0.1s linear

    &:hover
      &:before
        border-color $green

      .label-text
        color $green

    .label-text
      color $gray-text
      position relative
      top -2px
      padding-left 6px


// ==============================================
// Keyframes
// ==============================================

@keyframes link-arrow-animation
    0%
      transform translate(0, 0)
    50%
      transform translate(3px, 0)
    100%
      transform translate(0, 0)
