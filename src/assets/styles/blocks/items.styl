.items
  font-size 0
  margin -17px

  .item,
  .blog-item,
  .review-item
    display inline-block
    vertical-align top
    width calc(100% / 3 - 34px)
    margin 17px


.item,
.blog-item,
.review-item
  font-size 14px
  background $white
  position relative
  text-align center
  border-radius 5px
  box-shadow 0 4px 10px rgba(0,0,0,.15)

  transform translate(0,0)
  transition transform .22s linear, box-shadow .22s linear

  &:hover
    transform translate(0,-5px)
    box-shadow 0 4px 10px rgba(0,0,0,.25)

  .item-category
    display inline-block
    font-size 14px
    line-height 14px
    font-family 'Poppins'
    text-decoration none
    letter-spacing 2.25px
    text-transform uppercase
    margin 9px 0 5px
    position relative
    z-index 3

    &:hover
      text-decoration underline

  .item-link
    display block
    position absolute
    z-index 1
    top 0
    left 0
    width 100%
    height 100%

  .author-link
    position relative
    z-index 2

  .image
    width 100%
    padding 2px
    box-sizing border-box
    overflow hidden

    img
      width 100%
      border-top-left-radius 4px
      border-top-right-radius 4px

  .item-status
    position absolute
    top -10px
    right -10px

  .headline
    display inline-block
    position relative
    z-index 2
    font-size 24px
    line-height 30px
    font-family 'Poppins'
    font-weight 600
    letter-spacing -1.25px
    margin-top 28px
    padding-top 0

    a
      color $black
      text-decoration none

      &:hover
        text-decoration underline

  .author-name
    padding-top 9px

    .link
      font-size 14px
      position relative
      z-index 3

  .price
    border-top 1px solid $border-gray
    padding 7px 0 5px
    margin-top 24px
    font-size 22px
    font-family 'Poppins'
    font-weight 600
    letter-spacing -1.4px

  .partner-link
    padding 21px 0 30px

    a
      position relative
      z-index 3

.best-offer
  padding-top 9px
  text-transform capitalize
  color $blue
  font-size 14px
  font-weight 600

.blog-item
  text-align left

  .item-content
    padding 16px 30px 27px

    & + .price
      margin-top 0
      text-align center

  .headline
    border-bottom none
    text-decoration none
    line-height 34px
    margin-top 11px
    padding-top 0

  .item-description
    overflow hidden
    padding-top 13px
    font-size 16px
    line-height 24px
    color $gray-text
    padding-right 18px

  .blog-info
    border-top 1px solid $border-gray
    color $gray-text
    padding 17px 30px
    clearfix()

    .blog-date
      float left
      font-weight 600
      font-size 14px

    .blog-comments
      float right
      font-size 14px
      text-decoration none
      color $gray-text
      position relative
      z-index 3
      opacity 0.8
      transition opacity .2s linear, color .2s linear

      &:before
        content ''
        display inline-block
        vertical-align middle
        margin-right 8px
        sprite($s-comment)

      &:hover
        opacity 1
        color $black-weak

.reviews-items

  .review-item
    padding 33px 30px 18px
    box-sizing border-box

  .review-content
    font-size 18px
    line-height 28px
    min-height 220px
    text-align left

  .reviewer-avatar
    width 66px
    height 66px
    border-radius 50%
    position absolute
    right 30px
    top 0
    transform translate(0, -50%)
    overflow hidden

    img
      width 100%
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)

  .reviewer
    position relative
    border-top 1px solid $border-gray
    margin 20px -30px 0
    padding 20px 30px 2px
    box-sizing border-box
    text-align left

    .reviewer-name
      font-weight 600
      font-family 'Poppins'
      font-size 14px
      line-height 20px
      text-transform uppercase

    .reviewer-position
      color $gray-text
      font-size 14px


@media (max-width 1000px)
  .items
    .item,
    .blog-item,
    .review-item
      display inline-block
      width calc(50% - 34px)
      margin 17px

  .reviews-items .review-item
    width calc(50% - 30px)
    margin 15px

@media (max-width 700px)

  .items
    margin -10px -15px

    .item,
    .blog-item,
    .review-item
      display inline-block
      width calc(100% - 34px)
      margin-top 10px
      margin-bottom 10px

      .headline
        font-size 24px
        line-height 30px
        margin-top 24px
        padding-top 0

      .item-description
        font-size 14px
        line-height 22px

      .author-name
        padding-top 4px

    .item-status
      display none
