// ==============================================
// Slider overwrite
// ==============================================
.cd-hero-slider
  height 100%
  min-height 700px
  max-height 900px

.cd-hero
  position relative

.cd-header
  position absolute
  z-index 2
  top 0
  left 0
  width 100%

.cd-slider-nav
  position absolute
  width 100%
  bottom 50px
  z-index 2
  text-align center
  font-size 0

  li
    display inline-block
    opacity 0.5
    transition opacity .15s
    margin 0 5px

    &:hover
      opacity 0.7

    &.selected
      opacity 1

  a
    display inline-block
    border-radius 50%
    width 10px
    height 10px
    background $white

.cd-hero-slider
  li
    background-color #666
    background-size cover

    &:before
      content ''
      display block
      position absolute
      z-index 2
      top 0
      left 0
      width 100%
      height 100%
      background rgba(0,0,0,.75)

    &.-lighter:before
      background rgba(0,0,0,.5)

.hero-slider-content
  width 100%
  max-width 900px
  padding 0 30px
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  box-sizing border-box

  .slider-top-description
    color $white
    font-size 21px
    font-weight 500
    letter-spacing 1px
    font-family 'Poppins'
    text-transform uppercase

    b
      font-weight 600

  .slider-headline
    color $white
    font-size 60px
    line-height 64px
    font-family 'Poppins'
    font-weight 300
    letter-spacing -3px
    margin 40px 0

    b
      font-weight 600

  .slider-description
    width 100%
    max-width 580px
    margin 0 auto 54px
    letter-spacing -1px
    font-size 22px
    line-height 34px
    font-weight 500
    color $white
    opacity 0.55

@media (max-width 1160px)
  .cd-half-width .hero-slider-content
    .slider-headline
      font-size 42px
      line-height 54px
      margin 20px 0

    .slider-description
      font-size 18px
      line-height 24px

@media (max-width 1000px)
  .hero-slider-content
    .br
      display none

    .slider-headline
      font-size 50px
      letter-spacing -3px
      line-height 54px
      margin 30px 0 20px

    .slider-description
      font-size 20px
      margin-bottom 40px

      br
        display inline-block

  .cd-half-width
    .hero-slider-content
      .slider-headline
        font-size 36px
        line-height 48px

    &.cd-img-container
      right -3% !important

@media(max-width 700px)

  .cd-hero-slider
    min-height 570px

  .hero-slider-content
    padding 0 16px

    .slider-top-description
      font-size 16px

    .slider-headline
      font-size 28px !important
      line-height 38px !important
      letter-spacing -1px !important
      margin 12px 0 16px !important

    .slider-description
      font-size 16px
      line-height 26px
      letter-spacing -1px
      padding 0 18px
      margin-bottom 28px
      box-sizing border-box
