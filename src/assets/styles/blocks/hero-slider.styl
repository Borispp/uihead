  .cd-hero-slider li.selected.from-right .cd-half-width:first-of-type
    -webkit-transition opacity 0.4s 0.2s, -webkit-transform 0.5s 0.2s
    -moz-transition opacity 0.4s 0.2s, -moz-transform 0.5s 0.2s
