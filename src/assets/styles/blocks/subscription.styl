
// ==============================================
// Subscription
// ==============================================

.section-subscription
  position relative
  z-index 2
  color #fff
  text-align center
  padding 64px 0 94px

  .headline-big
    display block
    margin 0 0 15px

  .subscription-form
    margin-top 33px

  .subscription-name
    line-height 40px
    margin-bottom 66px

  .subscription-buyer,
  .subscription-price,
  .subscription-submit
    display inline-block

  .subscription-buyer
    width 174px
    text-align left
    p

  .subscription-price
    margin 5px 26px 4px 24px
    font-weight 600
    position relative
    top 2px

    .old-price,
    .price,
    .duration
      vertical-align middle

  .old-price
    font-family 'Poppins'
    font-size 24px
    color $gray-text2
    position relative
    letter-spacing -1px

    &:after
      content ''
      display block
      width calc(100% + 4px)
      height 3px
      background $gray-text2
      position absolute
      top calc(50% - 2px)
      left -2px

  .price
    font-family 'Poppins'
    font-size 36px
    display inline-block
    margin 0 8px 0 12px
    letter-spacing -2px

  .duration
    font-family 'Poppins'
    font-size 24px
    position relative
    top -4px
    letter-spacing -1px

.subscription-name
  display inline-block
  font-size 20px
  font-weight 500
  letter-spacing 6px
  text-transform uppercase
  border-bottom 2px solid $white

@media (max-width 1000px)

  .section-subscription
    padding 55px 0 74px

    .subscription-name
      margin-bottom 53px

    .headline-big
      margin-bottom 12px

    h2.headline
      font-size 36px
      line-height 48px
      letter-spacing -2px
      padding-bottom 8px

@media (max-width 700px)
  .section-subscription
    padding 55px 0 60px

    .subscription-name
      font-size 16px
      line-height 24px
      letter-spacing 5px
      margin 8px 0 36px

    .headline-big
      margin-bottom 15px

    h2.headline
      font-size 30px
      line-height 38px
      letter-spacing -1.5px
      padding-bottom 2px

      br
        display none

    .subscription-buyer,
    .subscription-price,
    .subscription-submit
      display block
      margin 0 auto

    .subscription-price
      margin-top 7px
      margin-bottom 4px
