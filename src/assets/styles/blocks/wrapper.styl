.wrapper
  width 100%

.common-wrapper
  .headline
    margin 24px 0 12px

  .common-bg
    background url('../images/content/bg-common.jpg')
    background-size cover
    margin 20px -20px 20px
    padding 1px 20px 20px

    .headline
      color #fff

  .common-green
    background $green
    margin 20px -20px 20px
    padding 1px 20px 20px

    .headline
      color #fff

      a
        color $black

        &:after
          background $black

  .common-gray
    background $gray
    margin 20px -20px 20px
    padding 1px 20px 20px
