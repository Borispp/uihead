// ==============================================
// Features
// ==============================================
.features
  padding 52px 0 0
  color #fff

  .base-col
    clearfix()

  .content
    padding 33px 0

    .btn
      color inherit

  .headline-author
    margin -24px 0 20px

  .price
    position relative
    z-index 2
    font-size 20px
    font-weight 600
    margin-bottom -2px

    s
      font-size 16px
      display inline-block
      vertical-align top
      position relative
      top 3px
      left 3px
      text-decoration none

      &:before
        content ''
        display inline-block
        width calc(100% + 4px)
        height 2px
        background $black
        position absolute
        top calc(50% - 2px)
        left -2px

    &.btn.-rounded
      cursor default
      color $black
      font-size 22px
      font-weight 500

      &:hover
        background $white
      &:active
        top 0

  .headline-description
    margin-bottom 12px

.features-image
  float left
  width 55%
  max-width 610px
  text-align center

  img
    width 100%

@media (max-width 1100px)
  .features
    .content
      padding 10px 0 30px

    .headline-description
      margin -8px 0 8px

@media (max-width 1000px)
  .features
    text-align center
    position relative

    &:before
      content ''
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      background rgba(0,0,0,.8)
      opacity 0
      transition opacity 0.2s

    .features-image
      float none
      margin 0 auto !important
      width 100%

    .price.btn.-rounded
      position absolute
      right 30px
      top 30px

    .headline-description
      display none

    h2.headline
      font-size 36px
      padding-bottom 20px

      .icon
        display none

    .content
      position absolute
      top 50%
      left 50%
      padding 0
      transform translate(-50%, -50%)
      box-sizing border-box
      opacity 0
      transition opacity 0.2s

      .headline-author
        margin-bottom 32px

      &.-light
        .headline,
        .headline-author,
        .headline-description,
        a
          color $white

        .headline-author a
          border-bottom-color $white

      .btn
        background $white
        color $black !important
        border-color $white

        &:hover
          background rgba(255,255,255,.9)

        &:active
          background rgba(255,255,255,.8)

    &:hover
      &:before
        opacity 1

      .content
        opacity 1

@media (max-width 700px)
  .features
    .content
      opacity 0 !important

    .price.btn.-rounded
      display none !important
