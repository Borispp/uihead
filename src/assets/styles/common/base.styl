html
  -webkit-text-size-adjust none
  min-height 100%

body
  font-size 18px
  line-height 1.8
  // background-color #e7eaf0

body, input, textarea
  font-family "Roboto"
  font-size 14px
  line-height 1.8

*:focus
  outline none

.-popup-active
  position relative
  overflow hidden
  width 100vw
  height 100vh

  // .wrapper
  //   height 100vh

#overlay
  background rgba(0,0,0, 0.85)
  position fixed
  z-index 9990
  top 0
  left 0
  width 100%
  height 100%

.-hide
  display none

.br
  display block

input[type="search"]
  -webkit-appearance textfield

input[type='submit']
  -webkit-appearance none
  -moz-appearance none
  appearance none

.-res-min-full,
.-res-min-1000,
.-res-min-920,
.-res-min-820
.-res-min-700
  display block !important

.-res-max-1100,
.-res-max-1000,
.-res-max-920,
.-res-max-820
.-res-max-700
  display none !important

@media(max-width 1100px)
  .-res-min-full
    display none !important

  .-res-max-1100
    display block !important

@media(max-width 1000px)
  .-res-min-1000
    display none !important

  .-res-max-1000
    display block !important

@media(max-width 920px)
  .-res-min-920
    display none !important

  .-res-max-920
    display block !important

@media(max-width 820px)
  .-res-min-820
    display none !important

  .-res-max-820
    display block !important

@media(max-width 700px)
  .-res-min-700
    display none !important

  .-res-max-700
    display block !important
