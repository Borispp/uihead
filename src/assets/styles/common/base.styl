html
  -webkit-text-size-adjust none
  min-height 100%

body
  font-size 18px
  line-height 1.8
  // background-color #e7eaf0

body, input, textarea
  font-family "Roboto"
  font-size 14px
  line-height 1.8

*:focus
  outline none

#overlay
  background rgba(0,0,0, 0.7)
  position fixed
  z-index 9998
  top 0
  left 0
  width 100%
  height 100%

.-hide
  display none

.-mobile
  display none !important

input[type="search"]
  -webkit-appearance textfield

.-res-min-full,
.-res-min-920,
.-res-min-820
  display block !important

.-res-max-1100,
.-res-max-920,
.-res-max-820
  display none !important

@media(max-width 1100px)
  .-res-min-full
    display none !important

  .-res-max-1100
    display block !important

@media(max-width 920px)
  .-res-min-920
    display none !important

  .-res-max-920
    display block !important

@media(max-width 820px)
  .-res-min-820
    display none !important

  .-res-max-820
    display block !important
